	<!-- Sezione viewFrustum -->
    <viewFrustum>       
        <viewFrustumProjection>PERSPECTIVE</viewFrustumProjection>      
        <viewFrustumFieldOfView>30</viewFrustumFieldOfView> 
        <viewFrustumAlign>HEIGHT_ALIGN</viewFrustumAlign>           
        <viewFrustumZFar>12000</viewFrustumZFar>
        <viewFrustumZNear>1</viewFrustumZNear>
    </viewFrustum>
 	
	<!-- Sezione relativa ai log -->
	<logger level="DEBUG"/>
</settings>
