<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<settings version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.abubusoft.com/settings">
    
	<!-- Sezione applicazione -->
	<application>	    
	    <applicationClazz>com.abubusoft.xenon.tiletest01.TileTest01Application</applicationClazz>
<!-- 		<applicationActivityClazz>org.abubu.tiletest01.NameActivity</applicationActivityClazz> -->
				<applicationActivityClazz>com.abubusoft.xenon.game.GameActivity</applicationActivityClazz>
<!-- 		<applicationConfigClazz>org.abubu.tiletest01.TileTest01Config</applicationConfigClazz> -->
 		<applicationConfigClazz>com.abubusoft.xenon.tiletest01.WhisperConfig</applicationConfigClazz>

 		<applicationGestureListenerClazz>com.abubusoft.xenon.tiletest01.TileTest01GestureListener</applicationGestureListenerClazz>
